namespace OpenShock.Serialization.Configuration;

struct BSSID {
  array:[ubyte:6];
}

table RFConfig {
  tx_pin:uint8;
  keepalive_enabled:bool;
}

table WiFiCredentials {
  id:uint8;
  ssid:string;
  bssid:BSSID;
  password:string;
}

table WiFiConfig {
  ap_ssid:string;
  hostname:string;
  credentials:[WiFiCredentials];
}

table CaptivePortalConfig {
  always_enabled:bool;
}

table BackendConfig {
  host:string;
  auth_token:string;
}

table Config {
  rf:RFConfig;
  wifi:WiFiConfig;
  captive_portal:CaptivePortalConfig;
  backend:BackendConfig;
}
